AR      = ar
ARFLAGS = rv
RANLIB  = /usr/bin/ranlib
#
MEM_MAP = -D_FILE_OFFSET_BITS=64
#
CC      = gcc
CFLAGS  = -O2 -w -Dlinux -DLITTLE_ENDIAN  $(MEM_MAP) -DPOINTER_64 -DINTEGER_IS_INT
FASTCFLAGS = $(CFLAGS)
#
FC      = pgf14
FFLAGS  = -O2 -w -i4 -r4 -tp px -Dlinux -DLITTLE_ENDIAN $(MEM_MAP)


